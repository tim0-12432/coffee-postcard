{
  "name": "coffee-postcard",
  "version": "0.1.3",
  "private": true,
  "author": "tim0-12432",
  "main": "public/main.js",
  "homepage": "./",
  "scripts": {
    "compile": "coffee -c -o src/ -b coffee/",
    "watch": "coffee -c -o src/ -b -w coffee/",
    "start": "concurrently -k \"npm run watch\" \"react-scripts start\"",
    "build": "npm run compile && react-scripts build",
    "test": "npm run compile && mocha --recursive ./src/__tests__/",
    "es:lint": "node_modules/.bin/eslint --ext=js --ext=ts --ext=jsx --ext=tsx .",
    "coffee:lint": "node_modules/.bin/coffeelint -f .coffeelintrc.json ./coffee/",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none npm start\" \"npm run electron:start\"",
    "electron:build": "npm run build && electron-builder -c.extraMetadata.main=build/main.js",
    "electron:start": "wait-on tcp:3000 && electron ."
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/plugin-transform-react-jsx": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/register": "^7.14.5",
    "coffee-script": "^1.12.7",
    "coffeelint": "^2.1.0",
    "coffeescript": "^2.5.1",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "electron": "^13.1.4",
    "electron-builder": "^22.11.7",
    "eslint": "^7.30.0",
    "mocha": "^9.0.1",
    "moxios": "^0.4.0",
    "prettier": "^2.3.2",
    "wait-on": "^6.0.0"
  },
  "dependencies": {
    "@electron/remote": "^1.2.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.1.9",
    "axios": "^0.21.1",
    "bootstrap": "^5.0.2",
    "codemirror": "^5.62.0",
    "console-feed": "^3.2.2",
    "electron-is-dev": "^2.0.0",
    "node-sass": "^6.0.1",
    "npm": "^7.19.0",
    "react": "^17.0.2",
    "react-bootstrap": "^1.6.1",
    "react-codemirror2": "^7.2.1",
    "react-dom": "^17.0.2",
    "react-scripts": "^4.0.3",
    "web-vitals": "^2.0.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.tim0-12432.coffee-postcard",
    "productName": "CoffeePostcard",
    "copyright": "Copyright Â© 2021 ${author}",
    "extends": null,
    "publish": {
      "provider": "github",
      "repo": "coffee-postcard",
      "owner": "tim0-12432",
      "releaseType": "release"
    },
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "icon": "./public/images/android-chrome-512x512.png"
    },
    "linux": {
      "target": "AppImage",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "icon": "./public/images/android-chrome-512x512.png",
      "category": "Development"
    },
    "files": [
      "./build/**/*",
      "./dist/**/*",
      "./node_modules/**/*",
      "./public/**/*",
      "*.js"
    ],
    "directories": {
      "buildResources": "public"
    }
  }
}
