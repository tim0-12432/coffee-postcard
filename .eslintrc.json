{
    "env": {
        "browser": true,
        "es2021": true
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "root": true,
    "plugins": [
        "react"
    ],
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "indent": [
            "warn",
            "tab"
        ],
        "no-mixed-spaces-and-tabs": [
            "warn"
        ],
        "linebreak-style": [
            "off",
            "windows"
        ],
        "quotes": [
            "warn",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-undef": [
            "warn"
        ],
        "no-unused-vars": [
            "warn"
        ],
        "react/prop-types": [
            "warn"
        ],
        "react/react-in-jsx-scope": [
            "warn"
        ]
    }
}